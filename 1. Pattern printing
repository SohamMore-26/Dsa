#include <stdio.h>
void rightTriangle() {
 int n, i, j;
 printf("Enter number of rows: ");
 scanf("%d", &n);
 for(i=1; i<=n; i++) {
 for(j=1; j<=i; j++)
 printf("%d ", j);
 printf("\n");
 }
}
void diamondShape() {
 int n, i, j, space;
 printf("Enter number of rows: ");
 scanf("%d", &n);
 space = n - 1;
 for(i=1; i<=n; i++) {
 for(j=1; j<=space; j++)
 printf(" ");
 space--;
 for(j=1; j<=2*i-1; j++)
 printf("%d", j);
 printf("\n");
 }
 space = 1;
 for(i=n-1; i>=1; i--) {
 for(j=1; j<=space; j++)
 printf(" ");
 space++;
 for(j=1; j<=2*i-1; j++)
 printf("%d", j);
 printf("\n");
 }
}
int main() {
 rightTriangle();
 diamondShape();
 return 0;
}
